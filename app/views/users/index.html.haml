.users_index
 .container
  .form
   =link_to index_path do
    %span.fas.fa-arrow-alt-circle-left
   =form_for @user, :method => :post do |f|
    = f.email_field :email
    %br
    = f.fields_for :employee do |e|
     = e.text_field :first_name
     %br
     = e.text_field :last_name
    %br
    = f.submit "Actualizar"
